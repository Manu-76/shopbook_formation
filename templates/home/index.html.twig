{% extends 'base.html.twig' %}

{% block title %}
    Bienvenue!
{% endblock %}

{% block body %}
    <h1>
        {% if homeContent.titre is defined and homeContent != null %}
            {{ homeContent.titre }}
        {% endif %}
    </h1>
    <p>
        {% if homeContent.texte is defined and homeContent != null %}
            {{ homeContent.texte }}
        {% endif %}
    </p>
    <hr>
    <h2>
        Nos derniers livres
    </h2>
    <div class="row">
        {% for livre in livres %}
            <div class="col-6 col-md-3">
                <img src="{{ asset('images/livres/' ~ livre.imageName) }}" alt="" class="img-fluid">
            </div>
        {% endfor %}
    </div>
{% endblock %}
        